@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="max-width: 400px; margin-top: 4rem;">
    <div style="background-color: var(--color-panel-light); padding: 2rem; border-radius: 8px;">
        <h2 style="text-align: center; color: var(--color-accent); margin-bottom: 2rem; text-transform:uppercase; letter-spacing:1px;">@ViewData["Title"]</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert" style="margin-bottom: 1rem;"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="margin-bottom: 1rem;" />
                <label asp-for="Input.Email" class="form-label" style="display:none;">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" style="margin-bottom: 1rem;" />
                <label asp-for="Input.Password" class="form-label" style="display:none;">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" style="margin-bottom: 1rem;" />
                <label asp-for="Input.ConfirmPassword" class="form-label" style="display:none;">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="text-align: center;">
                <button id="register-submit" type="submit" class="btn btn-primary" style="width: 100%;">Register</button>
            </div>
            <div style="margin-top: 1.5rem; text-align: center; font-size: 0.9rem;">
                 <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="color: var(--color-accent);">Already have an account? Login</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
