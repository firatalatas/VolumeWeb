@model VolumeWeb.Models.Artist

@{
    ViewData["Title"] = "Create Artist";
}

<div class="container" style="max-width: 600px;">
    <h1>Add New Artist</h1>
    <div style="background-color: var(--color-panel); padding: 2rem; margin-top: 1rem;">
        <form asp-action="CreateArtist">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div style="margin-bottom: 1rem;">
                <label asp-for="Name" class="control-label" style="display:block; margin-bottom:0.5rem;">Artist Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div style="margin-bottom: 1rem;">
                <label asp-for="Bio" class="control-label" style="display:block; margin-bottom:0.5rem;">Bio</label>
                <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            
            <div style="margin-bottom: 1rem;">
                <label asp-for="ImageUrl" class="control-label" style="display:block; margin-bottom:0.5rem;">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div style="margin-top: 2rem;">
                <input type="submit" value="Create Artist" class="btn-primary" />
                <a asp-action="Index" style="margin-left: 1rem; color: var(--color-text-muted);">Back to Dashboard</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
