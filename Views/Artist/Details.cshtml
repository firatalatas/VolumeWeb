@model VolumeWeb.Models.Artist

@{
    ViewData["Title"] = Model.Name;
    bool isFavorited = ViewBag.IsFavorited ?? false;
}

<div class="artist-detail-container" style="margin-top: 3rem;">
    <!-- Header -->
    <div style="display: flex; align-items: flex-end; gap: 2rem; margin-bottom: 4rem;">
        <div style="position: relative; width: 250px; height: 250px;">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%; box-shadow: 0 0 30px rgba(0,0,0,0.5);" />
            <!-- Heart Icon -->
            <div style="position: absolute; bottom: 0; right: 0; background: rgba(0,0,0,0.7); padding: 0.5rem; border-radius: 50%; cursor: pointer;" 
                 onclick="toggleArtistFavorite(@Model.Id)">
                <span id="heart-icon-artist-@Model.Id" style="color: @(isFavorited ? "var(--color-accent)" : "white"); font-size: 1.5rem;">
                    @(isFavorited ? "♥" : "♡")
                </span>
            </div>
        </div>

        <div>
            <h1 style="font-size: 4rem; font-weight: 900; text-transform: uppercase; margin: 0; line-height: 1;">@Model.Name</h1>
            <p style="font-size: 1.2rem; color: var(--color-text-muted); max-width: 600px; margin-top: 1rem;">
                @Model.Bio
            </p>
        </div>
    </div>

    <!-- Discography -->
    <div>
        <h3 style="border-bottom: 1px solid var(--color-panel-light); padding-bottom: 0.5rem; margin-bottom: 2rem; text-transform: uppercase; letter-spacing: 1px;">Discography</h3>
        
        <div class="album-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 2rem;">
            @foreach (var album in Model.Albums)
            {
                <partial name="_AlbumCard" model="album" />
            }
        </div>
    </div>
</div>
