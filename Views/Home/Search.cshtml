@model VolumeWeb.ViewModels.SearchViewModel

@{
    ViewData["Title"] = "Search Results";
}

<div class="header-section" style="margin-bottom: 3rem;">
    <h1 style="font-weight: 900; font-size: 3rem; letter-spacing: -0.05em; margin-bottom: 0.5rem; text-transform: uppercase;">Search Results</h1>
    <p style="color: var(--color-text-muted); font-size: 1.1rem;">Results for "@Model.Query"</p>
</div>

@if (!Model.Artists.Any() && !Model.Albums.Any())
{
    <div class="alert alert-info" role="alert" style="background: rgba(255,255,255,0.05); border: 1px solid var(--color-panel-light); color: var(--color-text); padding: 2rem; border-radius: 8px; text-align: center;">
        <p style="margin-bottom: 0; font-size: 1.2rem;">No results found for your search.</p>
    </div>
}
else
{
    @if (Model.Artists.Any())
    {
        <section style="margin-bottom: 4rem;">
            <h2 style="font-size: 1.5rem; font-weight: 600; text-transform: uppercase; margin-bottom: 1.5rem; border-bottom: 1px solid var(--color-panel-light); padding-bottom: 0.5rem;">Artists</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 2rem;">
                @foreach (var artist in Model.Artists)
                {
                    <a asp-controller="Artist" asp-action="Details" asp-route-id="@artist.Id" style="text-decoration: none; color: inherit;">
                        <div class="artist-card" style="background: var(--color-panel); border-radius: 12px; overflow: hidden; transition: transform 0.2s ease;">
                            <div style="aspect-ratio: 1; background: #222; position: relative;">
                                @if (!string.IsNullOrEmpty(artist.ImageUrl))
                                {
                                    <img src="@artist.ImageUrl" alt="@artist.Name" style="width: 100%; height: 100%; object-fit: cover;" />
                                }
                                else
                                {
                                    <div style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; font-size: 3rem; color: #333;">
                                        <i class="bi bi-person"></i>
                                    </div>
                                }
                            </div>
                            <div style="padding: 1rem;">
                                <h3 style="margin: 0; font-size: 1.1rem; font-weight: 600;">@artist.Name</h3>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </section>
    }

    @if (Model.Albums.Any())
    {
        <section>
            <h2 style="font-size: 1.5rem; font-weight: 600; text-transform: uppercase; margin-bottom: 1.5rem; border-bottom: 1px solid var(--color-panel-light); padding-bottom: 0.5rem;">Albums</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 2rem;">
                @foreach (var album in Model.Albums)
                {
                    <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id" style="text-decoration: none; color: inherit;">
                        <div class="album-card" style="background: var(--color-panel); border-radius: 12px; overflow: hidden; transition: transform 0.2s ease;">
                            <div style="aspect-ratio: 1; background: #222; position: relative;">
                                @if (!string.IsNullOrEmpty(album.CoverUrl))
                                {
                                    <img src="@album.CoverUrl" alt="@album.Title" style="width: 100%; height: 100%; object-fit: cover;" />
                                }
                                else
                                {
                                    <div style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; font-size: 3rem; color: #333;">
                                        <i class="bi bi-disc"></i>
                                    </div>
                                }
                            </div>
                            <div style="padding: 1rem;">
                                <h3 style="margin: 0 0 0.5rem 0; font-size: 1.1rem; font-weight: 600;">@album.Title</h3>
                                <p style="margin: 0; font-size: 0.9rem; color: var(--color-text-muted);">@string.Join(", ", album.Artists.Select(a => a.Name))</p>
                                <p style="margin: 0.2rem 0 0 0; font-size: 0.8rem; color: var(--color-text-muted);">@album.ReleaseYear</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </section>
    }
}
