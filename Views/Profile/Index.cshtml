@model VolumeWeb.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="profile-container">
    <div class="stats-bar" style="display: flex; gap: 4rem; background: var(--color-panel); padding: 1.5rem; border-radius: 12px; margin-bottom: 3rem;">
        <div class="stat-item">
            <div style="font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; color: var(--color-text-muted);">Total Favorite Albums</div>
            <div style="font-size: 2rem; font-weight: 900; color: var(--color-accent);">@Model.TotalFavoriteAlbums</div>
        </div>
        <div class="stat-item">
            <div style="font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; color: var(--color-text-muted);">Total Favorite Artists</div>
            <div style="font-size: 2rem; font-weight: 900; color: white;">@Model.TotalFavoriteArtists</div>
        </div>
    </div>

    <!-- Favorite Albums -->
    <section style="margin-bottom: 4rem;">
        <h3 style="border-bottom: 1px solid var(--color-panel-light); padding-bottom: 0.5rem; margin-bottom: 1.5rem; text-transform: uppercase; letter-spacing: 1px;">Favorite Albums</h3>
        
        <div class="grid-container" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 1.5rem;">
            @foreach (var fav in Model.FavoriteAlbums)
            {
                <a asp-controller="Album" asp-action="Details" asp-route-id="@fav.AlbumId" style="text-decoration: none; color: inherit;">
                    <div class="card-hover" style="position: relative; aspect-ratio: 1/1; overflow: hidden; border-radius: 8px;">
                        <img src="@fav.Album?.CoverUrl" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;" />
                        <div class="overlay" style="position: absolute; bottom: 0; left: 0; right: 0; background: rgba(0,0,0,0.8); padding: 1rem; transform: translateY(100%); transition: transform 0.3s;">
                            <div style="font-weight: bold;">@fav.Album?.Title</div>
                            <div style="font-size: 0.8rem; color: var(--color-text-muted);">@string.Join(", ", fav.Album?.Artists.Select(a => a.Name) ?? new List<string>())</div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </section>

    <!-- Favorite Artists -->
    <section>
        <h3 style="border-bottom: 1px solid var(--color-panel-light); padding-bottom: 0.5rem; margin-bottom: 1.5rem; text-transform: uppercase; letter-spacing: 1px;">Favorite Artists</h3>
        
        <div class="grid-container" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1.5rem;">
            @foreach (var fav in Model.FavoriteArtists)
            {
                <a asp-controller="Artist" asp-action="Details" asp-route-id="@fav.ArtistId" style="text-decoration: none; color: inherit; text-align: center;">
                    <div style="margin-bottom: 0.5rem;">
                         @if (!string.IsNullOrEmpty(fav.Artist?.ImageUrl))
                         {
                             <img src="@fav.Artist.ImageUrl" style="width: 100%; aspect-ratio: 1/1; object-fit: cover; border-radius: 8px;" />
                         }
                         else
                         {
                             <div style="width: 100%; aspect-ratio: 1/1; background: var(--color-panel); display: flex; align-items: center; justify-content: center; font-size: 2rem; font-weight: bold; border-radius: 8px;">
                                 @fav.Artist?.Name.Substring(0, 1)
                             </div>
                         }
                    </div>
                    <div style="font-weight: 600; font-size: 0.9rem;">@fav.Artist?.Name</div>
                </a>
            }
        </div>
    </section>

    <!-- Rated Albums Section -->
    <section>
        <h3 style="border-bottom: 1px solid var(--color-panel-light); padding-bottom: 0.5rem; margin-bottom: 1.5rem; text-transform: uppercase; letter-spacing: 1px;">Rated Albums</h3>
        @if (Model.RatedAlbums.Any())
        {
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 2rem;">
                @foreach (var rating in Model.RatedAlbums)
                {
                    <div class="album-card" style="transition: transform 0.2s;">
                        <a asp-controller="Album" asp-action="Details" asp-route-id="@rating.AlbumId" style="display: block; position: relative;">
                            <!-- Cover -->
                            <div style="position: relative; aspect-ratio: 1/1; overflow: hidden; background-color: var(--color-panel);">
                                <img src="@rating.Album.CoverUrl" alt="@rating.Album.Title" style="width: 100%; height: 100%; object-fit: cover;" />
                                <div style="position: absolute; bottom: 0; right: 0; background: var(--color-accent); color: white; padding: 0.2rem 0.5rem; font-weight: bold; font-size: 0.9rem;">
                                    @rating.Value
                                </div>
                            </div>
                            
                            <!-- Info -->
                            <div style="padding-top: 0.8rem;">
                                <div style="font-weight: 700; color: white; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@rating.Album.Title</div>
                                <div style="font-size: 0.9rem; color: var(--color-text-muted);">@string.Join(", ", rating.Album.Artists.Select(a => a.Name))</div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <p style="color: var(--color-text-muted);">No rated albums yet.</p>
        }
    </section>
</div>


