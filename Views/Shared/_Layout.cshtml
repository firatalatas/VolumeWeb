<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GRAPE</title>
    <!-- Use our custom site.css, assume bootstrap is removed or overridden heavily -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VolumeWeb.styles.css" asp-append-version="true" />
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">
</head>
<body>

    <header style="border-bottom: 1px solid var(--color-panel-light); padding: 1rem 0;">
        <div class="container" style="display: flex; justify-content: space-between; align-items: center;">
            <div class="logo">
                <a class="navbar-brand volume-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <span style="color:white;">GRA</span><span style="color:var(--color-accent);">PE</span>
                </a>
            </div>
            
            <nav style="display: flex; gap: 2rem; align-items: center;">
                <a asp-controller="Home" asp-action="Index" style="font-weight:600; text-transform:uppercase; font-size:0.9rem;">Explore</a>
                <a asp-controller="Profile" asp-action="Index" style="font-weight:600; text-transform:uppercase; font-size:0.9rem;">Profile</a>
                <!-- Admin Link for prototype -->
                <a asp-controller="Admin" asp-action="Index" style="color: var(--color-text-muted); font-size:0.8rem;">Admin</a>
            </nav>

            <div style="flex-grow: 1; max-width: 400px; margin: 0 2rem;">
                <form asp-controller="Home" asp-action="Search" method="get" style="display: flex;">
                    <input type="text" name="query" placeholder="Search artists or albums..." style="width: 100%; padding: 0.5rem 1rem; border-radius: 20px; border: 1px solid var(--color-panel-light); background: var(--color-panel); color: var(--color-text); outline: none;">
                </form>
            </div>

            <div class="user-actions" style="display: flex; gap: 1rem; align-items: center;">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" style="padding-top: 2rem;">
            @RenderBody()
        </main>
    </div>

    <footer style="margin-top: 4rem; padding: 2rem 0; border-top: 1px solid var(--color-panel-light); text-align: center; color: var(--color-text-muted);">
        <div class="container">
            &copy; 2026 - VOLUME - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
